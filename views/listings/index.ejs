<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h3>All Listings</h3> 
    <!-- <form action="listings/new" method="GET">
        <button type="submit">create listing</button>
    </form>
    -->
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">
        <% for(let listing of allListings) { %>
            <div class="card col car" style="width: 17rem;">
              <a href="/listing/<%=listing._id %>" class="listing_link">
              <img src="<%=listing.image.url%>" class="card-img-top " alt="listing_image" style="height: 17rem !important;">
              
               <div class="card-img-overlay"></div>
                <div class="card-body">
                  <a href="/listing/<%=listing._id %>" class="listing_link">
                  <p class="card-text"> 
                    <b><%= listing.title %></b> <br>
                   &#8377; <%=listing.price%> /night
                  </p>
                  </a>
                </div>
              </a>
              </div>
         <%}%>
      
    </div>

